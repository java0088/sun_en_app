.context {
  width: 750rpx;
  height: 100vh;
  overflow: hidden;
  color: #fff;
  font-size: 26rpx;
}
.context_swiper {
  width: 100%;
  height: 100%;
}
.context_swiper .swiper-item {
  width: 100%;
  height: 100%;
  background-color: #fc3530;
}
.context_swiper .swipe_img {
  width: 750rpx;
  height: 100vh;
}
.conver_box {
  position: absolute;
  bottom: 160rpx;
  left: 26rpx;
  width: 300rpx;
  height: 200rpx;
}
.conver_box .word {
  padding: 16rpx;
  border-radius: 10rpx;
  background-color: rgba(0, 0, 0, 0.3);
}
.conver_box .conver {
  margin-top: 26rpx;
  padding-left: 12rpx;
}
.conver_box .conver .username {
  font-weight: 700;
  margin-bottom: 16rpx;
}
.centence {
  position: absolute;
  left: 50%;
  top: 55%;
  width: 360rpx;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  text-align: center;
  line-height: 50rpx;
  font-size: 30rpx;
}
.play_btn {
  position: absolute;
  left: 50%;
  top: 48%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  color: rgba(255, 255, 255, 0.7);
}
.play_btn .icon-bofang {
  font-size: 80rpx;
}

